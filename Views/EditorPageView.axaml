<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:XMLord.App.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="XMLord.App.Views.EditorPageView"
             x:DataType="vm:EditorPageViewModel">

    <StackPanel>
        <Button Content="Select XML File" Click="OnSelectFileClick" />
        <ScrollViewer>
            <TextBlock Text="{Binding XText}" TextWrapping="Wrap" />
        </ScrollViewer>
    </StackPanel>
</UserControl>